# USB-C VBUS device configuration options

# Copyright 2023 The Chromium OS Authors
# SPDX-License-Identifier: Apache-2.0

config USBC_VBUS_TCPCI
	bool "USB-C VBUS TCPCI"
	select USBC_TCPC_TCPCI
	default y
	depends on DT_HAS_ZEPHYR_USB_C_VBUS_TCPCI_ENABLED
	help
	  Measure VBUS using the TCPC chip compliance to TCPCI

config USBC_VBUS_INIT_PRIORITY
	int "USB-C VBUS driver init priority"
	default 81
